{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch OmniContext Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/editors/vscode"],
      "outFiles": ["${workspaceFolder}/editors/vscode/out/**/*.js"],
      "preLaunchTask": "bun: compile:extension"
    }
  ]
}
